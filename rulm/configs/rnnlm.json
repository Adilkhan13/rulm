{
    "dataset_loader": {
        "type": "stream",
        "batch_size": 64
    },
    "train_data_path": "/data/train.json",
    "model": {
        "dropout": 0.3,
        "embedder": {
            "type": "random",
            "embedding_dim": 250
        },
        "contextualizer": {
            "type": "lstm",
            "input_dim": 250,
            "output_dim": 250,
            "n_layers": 1,
            "lstm_hidden_size": 250,
            "lstm_dropout": 0.3,
            "projection_dropout": 0.3
        }
    },
    "trainer": {
        "num_epochs": 30,
        "patience": 10,
        "cuda_device": 0,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
