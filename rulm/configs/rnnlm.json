{
   "model": {
        "type": "unidirectional_language_model",
        "dropout": 0.2,
        "use_custom_embedder_weights": true,
        "embedder": {
            "type": "embedding",
            "embedding_dim": 250
        },
        "contextualizer": {
            "type": "lstm",
            "input_dim": 250,
            "output_dim": 250,
            "n_layers": 1,
            "lstm_hidden_size": 250,
            "lstm_dropout": 0.2,
            "projection_dropout": 0.2
        }
    },
    "train": {
        "reader": {
            "type": "stream"
        },
        "iterator": {
            "type": "bucket",
            "batch_size": 64,
            "padding_noise": 0.0,
            "sorting_keys": [["input_tokens", "num_tokens"]],
            "cache_instances": true
        },
        "trainer": {
            "grad_clipping": 10.0,
            "num_epochs": 25,
            "summary_interval": 1,
            "should_log_learning_rate": true,
            "optimizer": {
                "type": "adam",
                "lr": 0.001
            },
            "shuffle": false,
            "cuda_device": 0
        }
    }
}
