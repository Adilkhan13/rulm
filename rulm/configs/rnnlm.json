{
   "model": {
        "dropout": 0.2,
        "embedder": {
            "type": "embedding",
            "embedding_dim": 250
        },
        "contextualizer": {
            "type": "lstm",
            "input_dim": 250,
            "output_dim": 250,
            "n_layers": 1,
            "lstm_hidden_size": 250,
            "lstm_dropout": 0.2,
            "projection_dropout": 0.2
        }
    },
    "dataset_reader": {
        "type": "stream"
    },
    "data_iterator": {
        "type": "bucket",
        "batch_size": 2,
        "padding_noise": 0.0,
        "cache_instances": true
    },
    "trainer": {
        "grad_clipping": 10.0,
        "num_epochs": 20,
        "optimizer": {
            "type": "adam",
            "lr": 0.005
        },
        "shuffle": false
    }
}
