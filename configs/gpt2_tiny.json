{
    "block_size": 512,
    "model": {
        "type": "gpt2",
        "n_ctx": 512,
        "n_positions": 512,
        "n_embd": 128,
        "n_head": 4,
        "n_layer": 4,
        "use_cache": true
    },
    "trainer": {
        "batch_size": 80,
        "gradient_accumulation_steps": 3,
        "eval_steps": 2000,
        "logging_steps": 50,
        "learning_rate": 0.001,
        "max_steps": 40000,
        "lr_scheduler_type": "cosine",
        "warmup_steps": 1000,
        "weight_decay": 0.1,
        "fp16": true,
        "gradient_checkpointing": false,
        "optim": "adamw_apex_fused",
        "half_precision_backend": "auto",
        "fp16_opt_level": "O2"
    }
}
